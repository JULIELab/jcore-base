<?xml version="1.0" encoding="UTF-8"?>
<collectionReaderDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <implementationName>de.julielab.jcore.reader.dta.DTAFileReader</implementationName>
  <processingResourceMetaData>
    <name>JCoRe DTA Reader</name>
    <description/>
    <version>2.0.0</version>
    <vendor>JULIE Lab Jena, Germany</vendor>
    <configurationParameters>
      <configurationParameter>
        <name>inputFile</name>
        <description>the input file or folder of input files</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>normalize</name>
        <description>Non-mandatory flag to normalize text, default true.</description>
        <type>Boolean</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings>
      <nameValuePair>
        <name>inputFile</name>
        <value>
          <string>/enter/your/path/here</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>normalize</name>
        <value>
          <boolean>true</boolean>
        </value>
      </nameValuePair>
    </configurationParameterSettings>  
    <typeSystemDescription>
      <imports>
        <import name="de.julielab.jcore.types.jcore-all-types"/>
      </imports>
    </typeSystemDescription>
    <typePriorities/>
    <fsIndexCollection/>
    <capabilities>
      <capability>
        <inputs/>
        <outputs>
          <type allAnnotatorFeatures="true">de.julielab.jcore.types.mantra.Unit</type>
          <type allAnnotatorFeatures="true">de.julielab.jcore.types.mantra.Entity</type>
          <type allAnnotatorFeatures="true">de.julielab.jcore.types.mantra.DocumentInformation</type>
        </outputs>
        <languagesSupported/>
      </capability>
    </capabilities>
    <operationalProperties>
      <modifiesCas>true</modifiesCas>
      <multipleDeploymentAllowed>false</multipleDeploymentAllowed>
      <outputsNewCASes>true</outputsNewCASes>
    </operationalProperties>
  </processingResourceMetaData>
  <resourceManagerConfiguration/>
</collectionReaderDescription>
